@{
    Layout = null;
}
@model LoginVm

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Log in (v2)</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link href="~/adminassets/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- icheck bootstrap -->
    <link href="~/adminassets/plugins/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/adminassets/css/adminlte.min.css" rel="stylesheet" />

    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="../../index2.html" class="h1"><b>Northwind</b>App</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Lütfen giriş yapınız</p>

                @*1.yol <form action="/Yonetici/User/Login" method="post"> *@
                @* @Html.AntiForgeryToken() //asp icinde default var {asp-antiforgery="true"} *@
                @* 2.yol
                @using (Html.BeginForm("Login","User",FormMethod.Post))
                {

                }
                *@
                @* 3.yol *@
                <form asp-action="Login" asp-controller="User" asp-area="Yonetici" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="input-group mb-3">
                        @*   <input type="text" name="UserName" class="form-control" placeholder="Kullanıcı Adı"> *@
                        @*  @Html.TextBox("Username",Model.UserName,new{@class="form-control",@placeholder="Kullanıcı Adı"}) *@
                        @*     @Html.TextBoxFor(x=>x.UserName, new { @class = "form-control", @placeholder = "Kullanıcı Adı" }) *@
                        <input type="text" asp-for="UserName" minlength="8" class="form-control" placeholder="Kullanıcı Adı">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="UserName"></span>
                    <div class="input-group mb-3">
                        @* <input type="password" name="Password" class="form-control" placeholder="Sifre"> *@
                        @*   @Html.Password("Password", Model.Password, new { @class = "form-control", @placeholder = "Sifre" }) *@
                        @*  @Html.PasswordFor(x => x.Password,new { @class = "form-control", @placeholder = "Sifre" }) *@
                        <input type="password" asp-for="Password" class="form-control" placeholder="Sifre">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Password"></span>
                    <div class="input-group mb-3">             
                        <img id="GuvenlikKoduImage" src="/Yonetici/User/GetCaptcha" />  
                        <img id="GuvenlikKoduRefresh" width="35" onclick="RefreshCaptcha()" style="cursor:pointer" src="~/adminassets/img/refreshicon.png" />
                        <div class="mt-3">
                            <input type="text" asp-for="GuvenlikKodu" class="form-control" placeholder="Güvenlik kodu">
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" asp-for="RememberMe" id="remember">
                                <label for="remember">
                                    Beni Hatırla
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                            @TempData["mesaj"]
                        </div>
                        <!-- /.col -->
                    </div>
                </form>


                <!-- /.social-auth-links -->

                <p class="mb-1">
                    <a href="forgot-password.html">Şifremi unuttum</a>
                </p>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap 4 -->
    <script src="~/adminassets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/adminassets/js/adminlte.min.js"></script>
    <!-- AdminLTE App -->
    <script>
   
            function RefreshCaptcha()
            {

            var id = Math.random();
        $("#GuvenlikKoduImage").attr("src","/Yonetici/User/GetCaptcha?id="+id);
        
            // "/Yonetici/User/GetCaptcha/10"" burdaki 10 RouteValue
            // "/Yonetici/User/GetCaptcha?id="+id burdaki id ise querystring
            
        
            }
    

    </script>

</body>
</html>
